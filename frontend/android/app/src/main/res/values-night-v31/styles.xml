<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ (API 31+) splash screen configuration for dark mode -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <!-- Android 12+ SplashScreen API - plain dark background -->
        <!-- Note: Android 12+ may still show app icon, but we minimize it -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <!-- Set icon size to minimum to make it less visible -->
        <item name="android:windowSplashScreenBrandingImage">@null</item>
    </style>
</resources>

